{
  "bindings": {
    "device_twins": [
      {
        "name": "DesiredTemperature",
        "enabled": true,
        "properties": {
          "cloud2device": true,
          "type": "float"
        }
      },
      {
        "name": "DesiredHumidity",
        "enabled": true,
        "properties": {
          "cloud2device": true,
          "type": "float"
        }
      },
      {
        "name": "DesiredAlertlevel",
        "enabled": true,
        "properties": {
          "cloud2device": true,
          "type": "double"
        }
      },
      {
        "name": "ReportedTemperature",
        "enabled": true,
        "properties": {
          "type": "float"
        }
      }
    ],
    "direct_methods": [
      {
        "name": "LightControl",
        "enabled": true
      },
      {
        "name": "FanOff",
        "enabled": true
      }
    ],
    "timers": [
      {
        "name": "MeasureTemperature",
        "enabled": true,
        "properties": {
          "period": "5, 0",
          "type": "periodic"
        }
      },
      {
        "name": "MeasureCarbonMonoxide",
        "enabled": true,
        "properties": {
          "period": "5, 0",
          "type": "periodic"
        }
      }
    ],
    "gpio_outputs": [
      {
        "name": "AzureIotConnectedLed",
        "enabled": true,
        "properties": {
          "pin": "NETWORK_CONNECTED_LED",
          "initialState": "low",
          "invertPin": true,
          "period": "0,250 * ONE_MS"
        }
      }
    ],
    "gpio_inputs": [
      {
        "name": "ButtonA",
        "enabled": true,
        "properties": {
          "pin": "BUTTON_A",
          "detect": "low",
          "period": "0,200000000"
        }
      }
    ],
    "general": [
      {
        "name": "PublishTelemetry",
        "enabled": true,
        "properties": {
          "period": "15,0"
        },
        "handler_template": "publish",
        "var_template": "declare_publish"
      },
      {
        "name": "Watchdog",
        "enabled": true,
        "properties": {
          "period": "30, 0"
        },
        "handler_template": "watchdog"
      }
    ]
  }
}